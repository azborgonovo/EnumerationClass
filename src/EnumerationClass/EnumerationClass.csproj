<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Andre Borgonovo</Authors>
    <Version>1.0.0-alpha1</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>A simple, stable and reusable Enumeration base class.</Description>
    <RepositoryUrl>https://github.com/azborgonovo/EnumerationClass</RepositoryUrl>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\EnumerationClass.xml</DocumentationFile>
    <DocumentationMarkdown>..\..\doc\README.md</DocumentationMarkdown>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Vsxmd" Version="1.3.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
